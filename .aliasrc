if ls --color=auto >/dev/null 2>&1 ; then 
    alias l='ls -ltr --color=auto'
    alias la='ls -la --color=auto'
    alias ll='ls -l --color=auto'
elif ls -G >/dev/null 2>&1 ; then 
    export LSCOLORS=xcfxcxdxbxegedabagacad
    alias l='ls -ltrG'
    alias la='ls -laG'
    alias ll='ls -lG'
else
    alias l='ls -ltr'
    alias la='ls -la'
    alias ll='ls -l'
fi

